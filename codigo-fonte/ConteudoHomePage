<html lang="pt-BR"> <!-- Define o idioma da página como português do Brasil -->
<head>
  <meta charset="UTF-8" /> <!-- Define o conjunto de caracteres como UTF-8 (aceita acentos, etc.) -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsividade em dispositivos móveis -->
  <title>Dashboard Bmind</title> <!-- Título exibido na aba do navegador -->
  <link rel="stylesheet" href="style.css"> <!-- CSS externo vinculado -->
</head>

<body>
  <!-- Barra superior com botão de menu, logo, busca e ícone de usuário -->
  <div class="top-bar">
    <button class="menu-btn" onclick="toggleMenu()">&#9776;</button> <!-- Botão do menu com função ao clicar -->
    <div class="logo">Bmind</div> <!-- Nome da marca/logo -->
    <div class="search-container">
      <input type="text" placeholder="Pesquisa..." /> <!-- Campo de busca -->
    </div>
    <div class="user-icon">&#128100;</div> <!-- Ícone de usuário -->
  </div>

  <div class="main">
    <div class="dashboard-title">Dashboard de Fulano</div> <!-- Título principal da dashboard -->

    <!-- Botões para trocar entre abas -->
    <div class="tabs">
      <button onclick="showTab('principal')">Principal</button>
      <button onclick="showTab('metas')">Metas</button>
    </div>

    <!-- Área de conteúdo das abas, que muda com JavaScript -->
    <div class="tab-content" id="tab-content">
      <!-- Conteúdo dinâmico é inserido aqui -->
    </div>

    <!-- Lista: Vistos recentemente -->
    <div class="list-section">
      <div class="list-title">Vistos recentemente</div>
      <div class="list-items">
        <div class="list-item" onclick="alert('Item 1 clicado')">Item</div> <!-- Item clicável -->
        <div class="list-item" onclick="alert('Item 2 clicado')">Item</div>
        <div class="list-item" onclick="alert('Item 3 clicado')">Item</div>
        <div class="list-item" onclick="alert('Item 4 clicado')">Item</div>
        <div class="list-item" onclick="alert('Item 5 clicado')">Item</div>
      </div>
    </div>

    <!-- Lista: Indicados para você -->
    <div class="list-section">
      <div class="list-title">Indicados para você</div>
      <div class="list-items">
        <div class="list-item" onclick="alert('Conteúdo 1 clicado')">Item</div>
        <div class="list-item" onclick="alert('Conteúdo 2 clicado')">Item</div>
        <div class="list-item" onclick="alert('Conteúdo 3 clicado')">Item</div>
        <div class="list-item" onclick="alert('Conteúdo 4 clicado')">Item</div>
        <div class="list-item" onclick="alert('Conteúdo 5 clicado')">Item</div>
      </div>
      <div class="more-content">MAIS COTEÚDOS ➜</div> <!-- Texto para ver mais conteúdos -->
    </div>
  </div>

  <!-- JavaScript para interatividade -->
  <script>
    function toggleMenu() {
      alert("Menu clicado"); // Alerta ao clicar no botão do menu
    }

    function showTab(tab) {
      const content = document.getElementById("tab-content");
      // Troca o conteúdo da área dinâmica com base na aba clicada
      content.innerHTML = tab === 'principal' ? '<p>Conteúdo da aba Principal</p>' : '<p>Conteúdo da aba Metas</p>';
    }
  </script>
</body>
