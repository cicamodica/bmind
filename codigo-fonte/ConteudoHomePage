  <!-- JavaScript para interatividade -->
  <script>
    function toggleMenu() {
      alert("Menu clicado"); // Alerta ao clicar no botão do menu
    }

    function showTab(tab) {
      const content = document.getElementById("tab-content");
      // Troca o conteúdo da área dinâmica com base na aba clicada
      content.innerHTML = tab === 'principal' ? '<p>Conteúdo da aba Principal</p>' : '<p>Conteúdo da aba Metas</p>';
    }
  </script>
